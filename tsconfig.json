{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "declaration": true,
        "noResolve": false,
        "module": "es2015",
        "target": "es5",
        "outDir": "dist",
        "jsx": "react",
        "lib": ["es5", "dom"],
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules",
        "extensions",
        "samples",
        "website",
        "dist"
    ]
}
