{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noResolve": false,
        "module": "es2015",
        "target": "es5",
        "outDir": "dist-es2015",
        "types" : ["lodash", "react", "react-dom", "subscribableevent", "synctasks"],
        "jsx": "react",
        "lib": ["es5", "dom"]
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules",
        "extensions",
        "website",
        "samples",
        "dist"
    ]
}