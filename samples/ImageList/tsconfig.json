{
  "compilerOptions": {
    "declaration": false,
    "noResolve": false,
    "jsx": "react",
    "reactNamespace": "RX",
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "strict": true,
    "typeRoots": [
        "node_modules/@types"
    ],
    "types" : ["lodash", "react", "react-dom"]
  },

  "include": [
    "./src/**/*"
  ],

  "exclude": [
    "node_modules"
  ]
}