{
    "compilerOptions": {
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "declaration": true,
        "noResolve": false,
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "jsx": "react",
        "lib": ["es2015.promise", "es5", "dom"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}