{
    "compilerOptions": {
        "declaration": true,
        "noResolve": false,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "reactNamespace": "RX",
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es5",
        "outDir": "dist",
        "skipLibCheck": true,
        "lib": [
            "es5",
            "dom"
        ],
        "types" : ["lodash", "react", "react-dom"]
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "dist",
        "node_modules"
    ]
}
