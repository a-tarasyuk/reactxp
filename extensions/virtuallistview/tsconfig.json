{
    "compilerOptions": {
        "downlevelIteration": false,
        "reactNamespace": "RX",
        "noUnusedLocals": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "declaration": true,
        "noResolve": false,
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "strict": true,
        "types" : ["lodash", "react", "react-dom"],
        "jsx": "react",
        "lib": ["es5", "dom", "es2015.collection", "es2015.iterable"]
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules",
        "dist"
    ]
}
